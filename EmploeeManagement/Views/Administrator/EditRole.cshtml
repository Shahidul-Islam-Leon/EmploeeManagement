@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";

}


<form asp-controller="Administrator" asp-action="EditRole" method="post" class="mt-3">

   

    <div class="form-group row">
        <label asp-for="Id"  class="col-sm-2 col-form-label" ></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" >            
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control"  placeholder="Name">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>

@if (Model.Users.Any())
{


    @foreach (var user in Model.Users)
    {


        <div class="card">

            <div class="card-header">
                UserList for "@Model.RoleName" role
            </div>
            <div class="card-body">
                <h5 class="card-title">@user</h5>
            </div>

            <div class="card-footer">
                <a asp-action="EditUserRole" asp-controller="administrator" asp-route-id="@Model.Id" class="btn btn-primary">Add Or Remove User from this Role</a>
                
            </div>
        </div>
        <br />

    }
}
else
{
    <br />
    <div class="card">
        <div class="card-header">
            @Model.RoleName
        </div>
        <div class="card-body">
            <h5 class="card-title">
                None of the user has this role
            </h5>
        </div>
        <div class="card-footer">
            <a asp-action="EditUserRole" asp-controller="administrator" asp-route-id="@Model.Id" class="btn btn-primary">AddOrRemove Role</a>
           
        </div>

    </div>




}
