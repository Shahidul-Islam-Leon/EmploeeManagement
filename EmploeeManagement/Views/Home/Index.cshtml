

@model IEnumerable<Employee>
@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee List";
}

<div class="card-deck">
        @foreach (var employee in Model)
        {
            var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");
            <div class="col-md-3">
                <div class="card my-1 mx-1 mt-2">
                    <div class="card-header">
                        <h3>@employee.Name</h3>
                    </div>
                    <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true"/>
                    <div class="card-footer text-center">
                        <a href="/home/details/@employee.Id" class="btn btn-primary">View</a>
                        <a href="/home/Edit/@employee.Id" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
</div>


@section Scripts

{
    <script src="~/js/CustomScript.js"></script>
}

